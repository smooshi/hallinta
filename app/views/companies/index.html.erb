<h1>Listing Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Company type</th>
      <th>Street address</th>
      <th>City</th>
      <th>Country</th>
      <th>Phone number</th>
      <th>Email</th>
      <th>Added by user</th>
      <th>Edited by user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.company_type.name %></td>
        <td><%= company.street_address %></td>
        <td><%= company.city %></td>
        <td><%= company.country %></td>
        <td><%= company.phone_number %></td>
        <td><%= company.email %></td>
        <td><%= @users.find_by_id(company.added_by_user).first_name %> <%= @users.find_by_id(company.added_by_user).last_name %></td>
        <td><%= @users.find_by_id(company.added_by_user).first_name %> <%= @users.find_by_id(company.added_by_user).last_name %></td>

        <td><%= link_to 'Edit', edit_company_path(company) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

