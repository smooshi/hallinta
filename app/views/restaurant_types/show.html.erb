<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant_type.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @restaurant_type.description %>
</p>

<p>
  <strong>Restaurants of this type: </strong>
</p>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Company</th>
    <th>Street address</th>
    <th>City</th>
    <th>Country</th>
    <th>Phone number</th>
    <th>Email</th>
    <th>Server ip</th>
    <th>Restaurant type</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= link_to restaurant.name, restaurant %></td>
        <td><%= link_to restaurant.company.name, restaurant.company %></td>
        <td><%= restaurant.street_address %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.country %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.email %></td>
        <td><%= restaurant.server_ip %></td>
        <td><%= restaurant.restaurant_type.name %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_restaurant_type_path(@restaurant_type) %> |
<%= link_to 'Back', restaurant_types_path %>
