<p id="notice"><%= notice %></p>
<%= render 'shared/companies_container' %>
<p>
  <strong>Name:</strong>
  <%= @company_type.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @company_type.description %>
</p>
<p>
  <strong>Companies of this type:</strong>
</p>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Company type</th>
    <th>Street address</th>
    <th>City</th>
    <th>Country</th>
    <th>Phone number</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.name, company %></td>
        <td><%= company.company_type.name %></td>
        <td><%= company.street_address %></td>
        <td><%= company.city %></td>
        <td><%= company.country %></td>
        <td><%= company.phone_number %></td>
        <td><%= company.email %></td>

        <td><%= link_to 'Edit', edit_company_path(company) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_company_type_path(@company_type) %>
<br>
<%= render 'shared/admin_right', thing: @company_type%>
