    </div>
    <div class="field">
      <%= f.label :end_date %><br>
      <%= f.datetime_select :end_date %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Show', @customer %>
