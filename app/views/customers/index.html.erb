<h1>Listing Customers</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to @restaurants.find_by_id(customer.restaurant_id).name, @restaurants.find_by_id(customer.restaurant_id) %></td>
        <td><%= customer.start_date %></td>
        <td><%= customer.end_date %></td>
        <td><%= link_to 'Show', customer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

