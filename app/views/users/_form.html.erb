<%= render 'shared/settings_container'%>
<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :phone_number %><br>
    <%= f.text_field :phone_number %>
  </div>
    <% if admin_user %>
      <div class="field">
        <%= f.label :admin %><br>
        <%= f.check_box :admin %>
      </div>

        <div class="field">
          <%= f.label :currenly_employed %><br>
          <%= f.check_box :currently_employed %>
        </div>
    <%end%>
    <div class="field">
      <%= f.label :role_id %><br>
      <%= f.select :role_id, options_from_collection_for_select(@roles, :id, :name) %>
    </div>
    <p> Password:</br> <%= f.password_field :password%></p>
    <p> Password Confirmation:</br> <%= f.password_field :password_confirmation%> </p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
