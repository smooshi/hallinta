<%= render 'shared/restaurants_container'%>
<p id="notice"><%= notice %></p>

<h1><%= t('menu.restaurant_eval_type')%></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.general.name')%></th>
      <th><%= t('activerecord.attributes.general.description')%></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurant_evaluation_types.each do |restaurant_evaluation_type| %>
      <tr class="navigationTable" data-type="edit" data-target="restaurant_evaluation_types" data-id="<%=restaurant_evaluation_type.id%>">
        <td><%= restaurant_evaluation_type.name %></td>
        <td><%= restaurant_evaluation_type.description %></td>
        <td><%= link_to t('activerecord.attributes.general.destroy'), restaurant_evaluation_type, method: :delete, data: { confirm: 'Are you sure?' }, :class => "deleteButton button" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant evaluation type', new_restaurant_evaluation_type_path %>
