<!DOCTYPE html>
<html>
<head>
  <title>Hallinta</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <ul>
    <li><%= link_to "Users", users_path%></li>
    <li><%= link_to "Companies", companies_path %></li>
    <li><%= link_to "Restaurants", restaurants_path %></li>
    <li><%= link_to "Roles", roles_path%></li>
    <li><%= link_to "Company Type", company_types_path%></li>
    <li><%= link_to "Restaurant Type", restaurant_types_path%></li>
  </ul>
  <div id="user_nav">
    <% if current_user %>
        Logged in as <%= current_user.email %>.
        <%= link_to "Log out", log_out_path %>
    <% else %>
        <%= link_to "Sign up", sign_up_path %> or
        <%= link_to "log in", log_in_path %>
    <% end %>
  </div>
</head>
<body>

<%= yield %>

</body>
</html>
