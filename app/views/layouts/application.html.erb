<!DOCTYPE html>
<html>
<head>
  <title>Hallinta</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <div id="user_nav" class="ui-title container">
    <%= link_to t('menu.companies'), companies_path %>
    <%= link_to t('menu.customers'), customers_path%>
    <%= link_to t('menu.agreements'), agreements_path %>
    <%= link_to t('menu.devices'), devices_path%>
    <%= link_to t('menu.settings'), settings_path%>
    <% if current_user %>
        <%= link_to "Log out", log_out_path %>
    <% else %>
        <%= link_to "Sign up", sign_up_path %> or
        <%= link_to "Log in", log_in_path %>
    <% end %>
  </div>
  <div class="container menu">
    <%= yield :container_menu %>
  </div>
</head>
<body>
<div class="page-header">
  <h1><%= yield :page_header %></h1>
</div>
<div class="container content">
<%= yield %>
</div>
</body>
</html>
