<%= render 'shared/settings_container'%>
<p id="notice"><%= notice %></p>

<h1><%= t('software.index.title')%></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Addon</th>
      <th>Bel price</th>
      <th>Price</th>
      <th>Identifier</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @softwares.each do |software| %>
      <tr>
        <td><%= link_to software.name, software %></td>
        <td><%= software.addon %></td>
        <td><%= software.BEL_price %></td>
        <td><%= software.price %></td>
        <td><%= software.identifier %></td>
        <td><%= link_to t('activerecord.attributes.general.edit'), edit_software_path(software) %></td>
        <% if admin_user %>
          <td><%= link_to t('activerecord.attributes.general.destroy'), software, method: :delete, data: { confirm: 'Are you sure?' }, :class => "deleteButton button"  %></td>
            <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('software.new.title'), new_software_path %>
