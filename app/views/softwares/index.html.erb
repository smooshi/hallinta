<h1>Listing Softwares</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Addon</th>
      <th>Bel price</th>
      <th>Price</th>
      <th>Identifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @softwares.each do |software| %>
      <tr>
        <td><%= software.name %></td>
        <td><%= software.addon %></td>
        <td><%= software.BEL_price %></td>
        <td><%= software.price %></td>
        <td><%= software.identifier %></td>
        <td><%= link_to 'Show', software %></td>
        <td><%= link_to 'Edit', edit_software_path(software) %></td>
        <td><%= link_to 'Destroy', software, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

